{
  "name": "Moov2",
  "displayName": "Moov2",
  "description": "Theme for moov2.com",
  "author": "Moov2",
  "website": "https://moov2.com",
  "version": "1.0",
  "issetuprecipe": true,
  "categories": [ "default" ],
  "tags": [ "moov2" ],

  // The variables are evaluated the first time they are accessed, and reused across steps
  "variables": {
    "landingContentItemId": "[js:uuid()]"
    // "now": "[js: new Date().toISOString()]"
  },

  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        // SaaS
        "OrchardCore.HomeRoute",
        "OrchardCore.Admin",
        "OrchardCore.Diagnostics",
        "OrchardCore.DynamicCache",
        "OrchardCore.Features",
        "OrchardCore.Navigation",
        "OrchardCore.Recipes",
        "OrchardCore.Resources",
        "OrchardCore.Roles",
        "OrchardCore.Settings",
        "OrchardCore.Themes",
        "OrchardCore.Users",

        // Content Management
        "OrchardCore.Alias",
        "OrchardCore.Autoroute",
        "OrchardCore.Html",
        "OrchardCore.ContentFields",
        "OrchardCore.ContentPreview",
        "OrchardCore.Contents",
        "OrchardCore.ContentTypes",
        "OrchardCore.CustomSettings",
        "OrchardCore.Deployment",
        "OrchardCore.Deployment.Remote",
        "OrchardCore.Feeds",
        "OrchardCore.Flows",
        "OrchardCore.Layers",
        "OrchardCore.Lists",
        "OrchardCore.Liquid",
        "OrchardCore.Markdown",
        "OrchardCore.Media",
        "OrchardCore.Menu",
        "OrchardCore.Queries",
        "OrchardCore.Title",
        "OrchardCore.Templates",
        "OrchardCore.Widgets",

        // Themes
        "Moov2.Website.Theme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "Moov2.Website.Theme"
    },
    {
      "name": "settings",
      "HomeRoute": {
        "Action": "Display",
        "Controller": "Item",
        "Area": "OrchardCore.Contents",
        "ContentItemId": "[js: variables('landingContentItemId')]"
      },
      "LayerSettings": {
        "Zones": [ "Logo", "Navigation", "FooterPrimary", "FooterSecondary" ]
      }
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "HtmlWidget",
          "DisplayName": "Html",
          "Settings": {
            "Creatable": "False",
            "Draftable": "True",
            "Versionable": "True",
            "Listable": "False",
            "Securable": "True",
            "Stereotype": "Widget"
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "HtmlWidget",
              "Name": "HtmlWidget",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        },
        {
          "Name": "Page",
          "DisplayName": "Page",
          "Settings": {
            "Creatable": "True",
            "Draftable": "True",
            "Versionable": "True",
            "Listable": "True",
            "Securable": "True",
            "Stereotype": null
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "Page",
              "Name": "Page",
              "Settings": {
                "Position": "3"
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "Position": "1",
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "Pattern": "{{ ContentItem | display_text | slugify }}",
                "AllowCustomPath": "True",
                "ShowHomepageOption": "False"
              }
            },
            {
              "PartName": "FlowPart",
              "Name": "FlowPart",
              "Settings": {
                "Position": "2"
              }
            },
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        },
        {
          "Name": "Homepage",
          "DisplayName": "Homepage",
          "Settings": {
            "Creatable": "True",
            "Draftable": "True",
            "Versionable": "True",
            "Listable": "True",
            "Securable": "True",
            "Stereotype": null
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "Page",
              "Name": "Page",
              "Settings": {
                "Position": "3"
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "Position": "1",
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "Pattern": "{{ ContentItem | display_text | slugify }}",
                "AllowCustomPath": "True",
                "ShowHomepageOption": "True"
              }
            },
            {
              "PartName": "FlowPart",
              "Name": "FlowPart",
              "Settings": {
                "Position": "2"
              }
            },
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        }
      ],
      "ContentParts": [
        {
          "Name": "HtmlWidget",
          "Settings": {},
          "ContentPartFieldDefinitionRecords": [
            {
              "FieldName": "HtmlField",
              "Name": "Content",
              "Settings": {
                "DisplayName": "Content",
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false
                },
                "Hint": null,
                "Editor": "Wysiwyg",
                "Position": "0"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "content",
      "Data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "HtmlWidget",
          "DisplayText": "Company Logo",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "LayerMetadata": {
            "Layer": "Always",
            "Zone": "Logo",
            "RenderTitle": false,
            "Position": 10
          },
          "HtmlWidget": {
            "Content": {
              "Html": "[file:text('Snippets/logo.html')]"
            }
          }
        }
      ]
    },
    {
      "name": "content",
      "Data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "HtmlWidget",
          "DisplayText": "Main Menu",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "LayerMetadata": {
            "Layer": "Always",
            "Zone": "Navigation",
            "RenderTitle": false,
            "Position": 10
          },
          "HtmlWidget": {
            "Content": {
              "Html": "[file:text('Snippets/navigation.html')]"
            }
          }
        }
      ]
    },
    {
      "name": "content",
      "Data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "HtmlWidget",
          "DisplayText": "Footer Primary",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "LayerMetadata": {
            "Layer": "Always",
            "Zone": "FooterPrimary",
            "RenderTitle": false,
            "Position": 10
          },
          "HtmlWidget": {
            "Content": {
              "Html": "[file:text('Snippets/footer-primary.html')]"
            }
          }
        }
      ]
    },
    {
      "name": "content",
      "Data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "HtmlWidget",
          "DisplayText": "Copyright",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "LayerMetadata": {
            "Layer": "Always",
            "Zone": "FooterSecondary",
            "RenderTitle": false,
            "Position": 10
          },
          "HtmlWidget": {
            "Content": {
              "Html": "[file:text('Snippets/copyright.html')]"
            }
          }
        }
      ]
    },
    {
      "name": "content",
      "data": [
        {
          "ContentItemId": "[js: uuid()]",
          "ContentType": "Homepage",
          "DisplayText": "Homepage",
          "Latest": true,
          "Published": true,
          "Owner": "[js: parameters('AdminUsername')]",
          "Author": "[js: parameters('AdminUsername')]",
          "Homepage": {},
          "AliasPart": {
            "Alias": "homepage"
          },
          "AutoroutePart": {
            "Path": null,
            "SetHomepage": true
          },
          "FlowPart": {
            "Widgets": [
              {
                "ContentItemId": "[js: uuid()]",
                "ContentType": "HtmlWidget",
                "DisplayText": null,
                "Latest": false,
                "Published": false,
                "Owner": null,
                "Author": "[js: parameters('AdminUsername')]",
                "HtmlWidget": {
                  "Content": {
                    "Html": "[file:text('Snippets/homepage.html')]"
                  }
                },
                "FlowMetadata": {
                  "Alignment": 3,
                  "Size": 100
                }
              }
            ]
          },
          "TitlePart": {
            "Title": "Homepage"
          }
        }
      ]
    },
    {
      "name": "layers",
      "Layers": [
        {
          "Name": "Always",
          "Rule": "true",
          "Description": "The widgets in this layer are displayed on any page of this site."
        },
        {
          "Name": "Homepage",
          "Rule": "isHomepage()",
          "Description": "The widgets in this layer are only displayed on the homepage."
        }
      ]
    }
  ]
}